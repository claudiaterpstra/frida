      <i class="fa fa-instagram" aria-hidden="true"></i>
    </div>
  </div>

  <div class="banner-studio">
    <div class="banner-studio-title">
      <h2><%= @user.first_name %>'s Studio</h2>
    </div>
  </div>

  <div class="container">
    <div class="user-studio-gallery">
      <img src="https://placehold.it/100x100" alt="">
