<%= render 'shared/subnav' %>
<div class="container user-show">
  <div class="row">
    <div class="col-lg-3 col-md-4 hide-sm">
      <div class="user-side-bar">
        <div class="user-side-img">
          <%= unique_image_tag(@user, :width=>200, :height=>200, :gravity=>"face", :radius=>"max", :crop=>"fill") %>
        </div>

      <div class="user-details">
        <i class="fa fa-facebook" aria-hidden="true"></i>
        <i class="fa fa-twitter" aria-hidden="true"></i>
        <i class="fa fa-instagram" aria-hidden="true"></i>
        <i class="fa fa-dribbble" aria-hidden="true"></i>
        <i class="fa fa-github-alt" aria-hidden="true"></i>
        <p>Member Since: <%= @user.created_at.strftime("%e %B %Y") %></p>
        <p><%= link_to "Edit Profile", edit_user_path(@user) %></p>
      </div>

      </div>
    </div>

    <div class="col-lg-9 col-md-8 col-sm-12">
      <div class="user-greeting">
        <h2>What's up, I'm <%= @user.first_name %>!</h2>
          <h3 class="sentence">I have
            <div class="slidingVertical">
              <span>mad skills.</span>
              <span>enrolled on <%= pluralize current_user.participations.count, "course" %>.</span>
              <span>unlocked <%= pluralize current_user.badge_count, "badge" %>.</span>
              <span>completed <%= pluralize current_user.course_reviews.count, "course" %>.</span>
              <span>left 2 reviews.</span>
            </div>
        </h3>
      </div>

    <div class="hr-medium">
      <hr>
    </div>

      <div class="user-show-studio">
        <h3>My Featured Artwork</h3>
          <div class="user-studio-gallery">
          </div>
      </div>

      <div class="user-show-studio">
        <h3>My Courses</h3>
          <div class="user-studio-gallery">
            <%= render 'shared/enrolledcoursecard' %>

          </div>
      </div>

      <div class="user-show-studio">
        <h3>Badges I've Earned</h3>
        <p>BADGES HERE</p>
      </div>
    </div>

  </div>
</div>

